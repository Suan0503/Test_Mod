# Test_Mod 環境變數範例
# 複製此檔案為 .env 並填入實際的值

# ===== LINE Bot 設定 =====
CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
CHANNEL_SECRET=your_channel_secret_here

# ===== 資料庫設定 =====
# PostgreSQL 範例
DATABASE_URL=postgresql://username:password@localhost:5432/testmod_db

# MySQL 範例
# DATABASE_URL=mysql://username:password@localhost:3306/testmod_db

# SQLite 範例（開發環境）
# DATABASE_URL=sqlite:///app.db

# ===== Flask 設定 =====
SECRET_KEY=your_secret_key_generate_a_random_string_here
FLASK_ENV=production
# FLASK_ENV=development  # 開發環境時使用

# ===== LINE Notify（選用）=====
LINE_NOTIFY_TOKEN=your_line_notify_token_here

# ===== 其他設定 =====
# 時區設定
TZ=Asia/Taipei

# 日誌等級
LOG_LEVEL=INFO
